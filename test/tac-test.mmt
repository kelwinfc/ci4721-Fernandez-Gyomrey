
fun none leapYear() {
    -- calcular si el año es bisiesto
    int year;
    read year;
    if ((year % 4 == 0) && (year % 100 != 0) || (year % 400 == 0)) {
        print "El año es bisiesto";
    } else {
        print "El año no es bisiesto";
    };
}

fun int fibRec(int n){
    if ( n == 0 ){
        return 0;
    } elif ( n == 1 ){
        return 1;
    }
    return fibRec(n - 1) + fibRec(n - 2);
}

fun boolean boolcheck(boolean x, boolean y) {
    return ((x ==> y) == (!x || y)) &&
           ((x <== y) == (x || !y)) &&
           ((!x && !y) == !(x || y)) &&
           ((x && !x) ==> true);
}

fun boolean opcheck(int a, int b) {
    boolean c = (a < b == !(b <= a)) && 
                (a > b == !(b >= a)) && 
                (a < 10 || 10 <= a);
    return c;
}

fun int fact(int t) {
    if (0 == t) {
        return 1;
    }
    return t * fact( t - 1);
}

